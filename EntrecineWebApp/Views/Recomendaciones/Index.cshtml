@using EntrecineWebApp.Models;
@model IList<Pelicula>

@{
    ViewBag.Title = "Recomendaciones";
}

<h2>Lo más visto en Entrecine </h2>
<div id="masVisto">

    @for(int i=0;i<Model.Count();i++)
    {
            <div class="movieCartelera">
                <div class="titulo"><b>@((i+1)+"º:   ")</b>@Html.DisplayFor(modelItem => Model[i].Nombre)</div>
                <a href="@Url.Content("~/Pelicula/Detalles/"+Model[i].Id)"><img src="@Url.Content("~/images/Caratulas/caratula_"+@Html.DisplayFor(modelItem=>Model[i].Id)+".jpg")" /></a>
                
            </div>
            
    }

</div>

@if (Request.IsAuthenticated) {
    <h2>Recomendaciones para @Html.Encode(User.Identity.Name)</h2>
}