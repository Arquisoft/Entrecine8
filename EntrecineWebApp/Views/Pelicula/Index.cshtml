<style>
    h2 {
        text-align:center;
        font-size:1.4em;
        border-bottom:double;
        margin: 10px;
    }
    .titulo {
        text-align:center;
        font-size:1em;
        font-family:Verdana,Arial;
    }
    .contenedorPeli {
        border:dashed;
        float:left;
        max-height:300px;
        max-width:200px;
    }

    .pelicula {
        text-align:center;
    }

    .portada {
        text-align:inherit;
    }
</style>
<h2>CARTELERA</h2>

<div id="listadoPelis">

    @foreach (var item in Model)
    {
    <div class="contenedorPeli">
        <div class="pelicula">
            <div class="titulo">
                @Html.DisplayFor(modelItem => item.Nombre)
            </div>
            <div class="portada">
                     @Html.ActionLink(" ", "Details", "Pelicula",new{id=item.Id}, new {style = "background: url('" + Url.Content("~/images/Caratulas/caratula_"+@Html.DisplayFor(modelItem=>item.Id)+".jpg") + "') no-repeat center right; display:block; height:300px; width:200px;" })
            </div>
            
        </div>
    </div>
    }

</div>
